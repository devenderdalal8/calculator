<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Calculator.ScientificCal"
    tools:showIn="@layout/activity_scientific_cal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:layout_weight="2"
            android:layout_margin="5dp"
            >
           
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/edittextinput"
                >

                <Button
                    android:id="@+id/history"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_history_24"
                    android:onClick="onClick"
                    android:textColor="@color/orange" />
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"
                    android:textSize="20sp"
                    android:editable="false"
                    android:textAlignment="textEnd"
                    android:gravity="end|center"
                    android:layout_weight="1"/>
    
                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp"
                    android:hint="0"
                    android:editable="false"
                    android:textSize="20sp"
                    android:textAlignment="textEnd"
                    android:gravity="end|center"
                    android:layout_weight="1"/>
    
            </LinearLayout>
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1"
                >
                
                <Button
                    android:id="@+id/square"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="onClick"
                    android:text="@string/square"
                    android:textColor="@color/orange"
                    android:textAllCaps="false"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textSize="22dp"
                    />
        
                <Button
                    android:id="@+id/xpowy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textColor="@color/orange"
                    android:text="@string/xpown"
                    android:textAllCaps="false"
                    android:textSize="22dp"/>
        
                <Button
                    android:id="@+id/log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/orange"
                    android:onClick="onClick"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:text="log"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>
                <Button
                    android:id="@+id/factorial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:onClick="onClick"
                    android:text="@string/factorial"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>
        </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
                
                <Button
                    android:id="@+id/sin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/sin"
                    android:textColor="@color/orange"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>
        
                <Button
                    android:id="@+id/cos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:onClick="onClick"
                    android:text="@string/cos"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>
        
                <Button
                    android:id="@+id/tan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/tan"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/sqrt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/sqrt"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
                <Button
                    android:id="@+id/openBracket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/openBracket"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/closeBracket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/closeBracket"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:onClick="onClick"
                    android:text="@string/mode1"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/pi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:onClick="onClick"
                    android:text="@string/pi"
                    android:textAllCaps="false"
                    android:textSize="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_weight="1">
            
            <Button
                android:id="@+id/toggle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:checked="false"
                android:onClick="onClick"
                android:text="@string/toggle"
                />
                
            <Button
                android:id="@+id/clear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textColor="@color/red"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/clear"
                android:textSize="20dp"/>
    
            <Button
                android:id="@+id/backSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:onClick="onClick"
                android:text="@string/backspace"
                android:textSize="20dp"/>

                <Button
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:textColor="@color/orange"
                    android:text="@string/divide"
                    android:textSize="20dp"/>

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="4"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_weight="1">

                            <Button
                                android:id="@+id/num7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="7"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/num8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="8"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/num9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="9"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/multiply"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textColor="@color/orange"
                                android:text="x" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_weight="1"
                            >
                            <Button
                                android:id="@+id/num4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="4"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/num5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="5" />

                            <Button
                                android:id="@+id/num6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="6"
                                android:textSize="20dp"/>

                            <Button
                                android:id="@+id/minus"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:text="-"
                                android:textColor="@color/orange"
                                android:textSize="20dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_weight="1"
                            >
                            <Button
                                android:id="@+id/num1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="1" />

                            <Button
                                android:id="@+id/num2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="2" />

                            <Button
                                android:id="@+id/num3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="3" />

                            <Button
                                android:id="@+id/plus2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/orange"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="+" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/white"
                            android:layout_weight="1">
                            <Button
                                android:id="@+id/posneg"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textColor="@color/orange"
                                android:textSize="20dp"
                                android:text="@string/posneg"
                                />

                            <Button
                                android:id="@+id/num0"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:text="0" />

                            <Button
                                android:id="@+id/dot"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:layout_weight="1"
                                android:nestedScrollingEnabled="false"
                                android:textColor="@color/orange"
                                android:onClick="onClick"

                                android:text="."
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/equal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/orange"
                                android:textColor="@color/white"
                                android:layout_weight="1"
                                android:onClick="onClick"
                                android:textSize="20dp"
                                android:layout_marginRight="2dp"
                                android:text="="
                                android:layout_marginBottom="2dp"/>

                        </LinearLayout>
                        </LinearLayout>

                    <Button
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:id="@+id/backIntent"
                        android:background="@color/orange"
                        android:text="@string/rarrow"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:onClick="onClick"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
</LinearLayout>