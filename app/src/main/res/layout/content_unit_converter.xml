<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Unit.UnitConverter"
    tools:showIn="@layout/activity_unit_converter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/area"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Area"
            android:id="@+id/area"
            android:layout_marginLeft="5dp"
            android:textSize="20dp"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/length"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Length"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:background="@color/orange"
            android:textColor="@color/white"
            android:id="@+id/length"
            android:textSize="20dp"
            android:layout_below="@+id/area"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/weights"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/weight"
            android:layout_marginLeft="5dp"
            android:id="@+id/weight"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/temperature"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/temperature"
            android:id="@+id/tempearture"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/emi"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="EMI Calculator"
            android:id="@+id/emi"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/sip"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SIP Calculator "
            android:id="@+id/sip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/fd"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Fixed Deposit "
            android:id="@+id/fd"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loan"
            android:scaleType="fitXY"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Loan Calculator "
            android:id="@+id/loan"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/orange"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="onClick"/>

    </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
