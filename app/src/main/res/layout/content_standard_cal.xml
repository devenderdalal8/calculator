<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Calculator.StandardCal"
    tools:showIn="@layout/activity_standard_cal"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/edittextinput"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            >
        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:paddingRight="10dp"
            android:textSize="20sp"
            android:editable="false"
            android:textAlignment="textEnd"
            android:gravity="end|center"
            android:layout_weight="1"
            />

        <EditText
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:hint="0"
            android:editable="false"
            android:id="@+id/editText2"
            android:textAlignment="textEnd"
            android:gravity="end|center" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/openBracket"
                    android:id="@+id/openBracket"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:textSize="22dp"
                    />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/closeBracket"
                    android:id="@+id/closeBracket"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:textSize="22dp"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/square"
                    android:id="@+id/square"
                    android:onClick="onClick"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18dp"
                     />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sqrt"
                    android:id="@+id/sqrt"
                    android:onClick="onClick"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="22dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                >

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/clear"
                android:id="@+id/clear"
                android:background="@color/white"
                android:textColor="@color/red"
                android:onClick="onClick"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="22dp"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/backspace"
                android:background="@color/white"
                android:textColor="@color/red"

                android:id="@+id/backSpace"
                android:onClick="onClick"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="22dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/divide"
                android:id="@+id/divide"
                android:background="@color/white"
                android:textColor="@color/orange"
                android:gravity="center"
                android:textSize="22dp"
                android:onClick="onClick"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/multiply"
                android:background="@color/white"
                android:textColor="@color/orange"
                android:onClick="onClick"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <Button
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:id="@+id/backIntent"
                android:background="@color/orange"
                android:text="@string/larrow"
                android:textSize="20dp"
                android:onClick="onClick"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="7"
                    android:id="@+id/num7"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:textSize="22dp"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="8"
                    android:textSize="22dp"
                    android:background="@color/white"
                    android:id="@+id/num8"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="9"
                    android:textSize="22dp"
                    android:background="@color/white"
                    android:id="@+id/num9"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="4"
                    android:textSize="22dp"
                    android:background="@color/white"
                    android:id="@+id/num4"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:gravity="center"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="5"
                        android:textSize="22dp"
                        android:id="@+id/num5"
                        android:background="@color/white"

                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="6"
                        android:textSize="22dp"
                        android:id="@+id/num6"
                        android:background="@color/white"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="1"
                        android:textSize="22dp"
                        android:id="@+id/num1"
                        android:background="@color/white"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="2"
                        android:textSize="22dp"
                        android:background="@color/white"
                        android:id="@+id/num2"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:id="@+id/num3"
                        android:textSize="22sp"
                        android:background="@color/white"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/posneg"
                        android:id="@+id/posneg"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:textColor="@color/orange"
                        android:gravity="center"
                        android:textSize="22dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:id="@+id/num0"
                        android:onClick="onClick"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:gravity="center"
                        android:textSize="22dp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="."
                        android:id="@+id/dot"
                        android:textColor="@color/orange"
                        android:background="@color/white"
                        android:onClick="onClick"
                        android:textSize="22dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="3">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="-"
                    android:textSize="22dp"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:id="@+id/minus"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"
                    android:textSize="22dp"
                    android:background="@color/white"
                    android:textColor="@color/orange"
                    android:id="@+id/plus"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:gravity="center"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="="
                    android:textSize="22dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:id="@+id/equal"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"

                    />

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:src="@drawable/history"
                    android:background="@color/orange"
                    android:id="@+id/history"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <Button
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:id="@+id/intent"
                android:textSize="20dp"
                android:background="@color/orange"
                android:text="@string/rarrow"
               android:gravity="center"
                android:onClick="onClick"
                android:textColor="@color/white"
                />


        </LinearLayout>


</LinearLayout>

</LinearLayout>
